<Window x:Class="BlackJack.RoomToFindPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Комната ожидания игроков" Height="400" Width="300" MinHeight="400">
    <DockPanel>
        <Label DockPanel.Dock="Top" Width="90" Height="30" Margin="20 0 20 0">Хозяин комнаты</Label>
        <Button x:Name="btnStartGame" DockPanel.Dock="Bottom" Content="Старт" Click="btnStartGame_Click"/>
        <StackPanel x:Name="spPlaers">
            <Label Width="90" Height="30" Margin="20 0 20 0">Игрок 1</Label>
        </StackPanel>
    </DockPanel>
</Window>
