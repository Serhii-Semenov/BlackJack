<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="BlackJack" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <DockPanel HorizontalAlignment="Right" Height="78" VerticalAlignment="Top" Width="255" Margin="0,0,0,0">
        <Button Name="LoginButton" Content="Авторизация" HorizontalAlignment="Left" Margin="20" Width="80" Height="30" Click="LoginButton_Click" Cursor="Hand"/>
        <Button Name="RegisterButton" Content="Регистрация" HorizontalAlignment="Right" Margin="0,0,20,0" Width="80" Height="30" Click="RegisterButton_Click" Cursor="Hand"/>
    </DockPanel>
</Window>
